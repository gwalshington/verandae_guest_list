<h1>Listing Guests</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      
      <th>Phone</th>
      <th>Email</th>
    <!--   <th>Birthday</th>
      <th>Notes</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guests.each do |guest| %>
      <tr>
        <td><%= guest.first_name%> <%=guest.last_name %></td>
        <td><%= guest.phone %></td>
        <td><%= guest.email %></td>
      <!--   <td><%#= guest.birthday %></td>
        <td><%#= guest.notes %></td> -->
        <td><%= link_to 'View', guest %></td>
        <td><%#= link_to 'Edit', edit_guest_path(guest) %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

